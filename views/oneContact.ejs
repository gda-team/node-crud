<%- include('./includes/head.ejs') %>

<!--  -->
<div class="row">
	<div class="col-md-3"></div>
	<div class="col-md-6">
		<div class="card text-left bg-light">
			<img class="card-img-top" src="holder.js/100px180/" alt="" />
			<div class="card-body">
				<h4 class="card-title text-danger">
					<%= contact.nom %> <%= contact.prenom %>
				</h4>
				<span class="card-text text-success"><%= contact.email %></span>
				<hr />
				<p class="text-dark"><%= contact.description %></p>
			</div>
			<div class="card-footer d-flex justify-content-end gap-2">
				<form action="/delete" method="POST">
					<input type="text" hidden name="id" value="<%= contact.id%>" />
					<button class="btn btn-outline-danger">Supprimer</button>
				</form>
            <a class="btn btn-success" href="/update/<%= contact.id %>">Editer</a>
			</div>
		</div>
	</div>
	<div class="col-md-3"></div>
</div>

