<%- include('./includes/head.ejs') %>

<!--  -->
<div class="row">
	<div class="col-md-3"></div>
	<div class="col-md-6">
		<div class="card card-body text-left bg-light p-3">
			<h4 class="text-danger">Mettre a jour</h4>
			<form action="/update/<%= onecontact.id%>" method="POST">
				<div class="form-group mb-2">
					<label for="nom">Nom</label>
					<input
						type="text"
						name="nom"
						id="nom"
						class="form-control"
                  value="<%= onecontact.nom %>"
					/>
				</div>
				<div class="form-group mb-2">
					<label for="prenom">Prenom</label>
					<input
						type="text"
						name="prenom"
						id="prenom"
						class="form-control"
						placeholder="prenom"
                  value="<%= onecontact.prenom %>"

					/>
				</div>
				<div class="form-group mb-2">
					<label for="email">email</label>
					<input
						type="email"
						name="nom"
						id="nom"
						class="form-control"
						placeholder="email"
                  value="<%= onecontact.email %>"

					/>
				</div>
				<div class="form-group mb-2">
					<label for="tel">Nom</label>
					<input
						type="number"
						name="tel"
						id="tel"
						class="form-control"
						placeholder="tel"
                  value="<%= onecontact.tel %>"

					/>
				</div>
            	<div class="form-group mb-2">
					<label for="description">Description</label>
					<textarea
						type="number"
						name="description"
						id="description"
						class="form-control"
						placeholder="details"
					><%= onecontact.description %>
            </textarea>
				</div>
				<div class="form-group mb-2 d-flex justify-content-end">
					<button class="btn btn-success">Enregistrer</button>
			</form>
		</div>
	</div>
	<div class="col-md-3"></div>
</div>

<!--  -->
<%- include('./includes/foot.ejs') %>
